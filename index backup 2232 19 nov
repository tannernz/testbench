<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>NZ Zone Lookup + Directions</title>
  <style>
    #map {
      height: 80vh;
      width: 100%;
    }
    #controls {
      margin: 10px;
      text-align: center;
    }
    #address, #to {
      font-size: 18px;
      padding: 12px;
      width: 320px;
      margin: 5px;
    }
    #controls button {
      font-size: 18px;
      padding: 12px 24px;
      margin: 5px;
      cursor: pointer;
    }
    #result {
      font-size: 22px;
      font-weight: 600;
      margin-top: 10px;
      color: #333;
      text-align: center;
      white-space: nowrap;
      overflow: hidden;
    }

    /* Scrolling footer text */
    .scroll-text {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(255,255,255,0.95);
      padding: 6px 0;
      text-align: center;
      font-size: 28px;
      font-weight: bold;
      white-space: nowrap;
      overflow: hidden;
      z-index: 9999;
    }
    .scroll-track {
      display: inline-block;
      white-space: nowrap;
      will-change: transform;
      animation: moveLeft 60s linear infinite;
      padding-left: 100%;
    }
    @keyframes moveLeft {
      0%   { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }

    /* Animated color cycling */
    @keyframes colorCycle {
      0%   { color: red; }
      25%  { color: orange; }
      50%  { color: lime; }
      75%  { color: cyan; }
      100% { color: red; }
    }
    .scroll-track span {
      animation: colorCycle 4s linear infinite;
    }

    .truck svg {
      height: 40px;
      margin-right: 12px;
    }
  </style>

  <!-- Google Maps JS API with Places + Geometry -->
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLJtsETdc-9JYoDpN9pua3Thz1rBjGmBc&libraries=geometry,places&callback=initMap"
    defer>
  </script>
</head>
<body>
  <div id="controls">
    <!-- Zone lookup (origin) -->
    <form onsubmit="lookupZone(); return false;">
      <input id="address" type="text" placeholder="Enter NZ address">
      <button type="submit">Find Zone</button>
    </form>

    <!-- Destination for route -->
    <form onsubmit="calcRoute(); return false;">
      <input id="to" type="text" placeholder="Enter destination address">
      <button type="submit">Get Route</button>
    </form>

    <p id="result"></p>
  </div>

  <div id="map"></div>

  <!-- Scrolling footer with red truck SVG facing left -->
  <div class="scroll-text">
    <div class="scroll-track">
      <span class="truck">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 120" width="160" height="60" style="transform: scaleX(-1);">
          <rect x="10" y="40" width="200" height="50" rx="6" ry="6" fill="#e10600"/>
          <rect x="210" y="65" width="6" height="4" fill="#e10600"/>
          <rect x="222" y="50" width="28" height="35" rx="4" ry="4" fill="#e10600"/>
          <polygon points="250,50 270,60 270,85 250,85" fill="#e10600"/>
          <rect x="226" y="55" width="22" height="15" rx="2" ry="2" fill="#ffffff" opacity="0.85"/>
          <circle cx="50" cy="95" r="12" fill="#111"/>
          <circle cx="100" cy="95" r="12" fill="#111"/>
          <circle cx="150" cy="95" r="12" fill="#111"/>
          <circle cx="200" cy="95" r="12" fill="#111"/>
          <circle cx="235" cy="95" r="12" fill="#111"/>
          <circle cx="260" cy="95" r="12" fill="#111"/>
        </svg>
      </span>
      <span>m</span><span>a</span><span>d</span><span>e</span>
      <span> </span><span>b</span><span>y</span><span> </span>
      <span>t</span><span>a</span><span>n</span><span>n</span><span>e</span><span>r</span>
    </div>
  </div>

  <script>
    let map;
    let polygons = [];
    let autocompleteOrigin, autocompleteDest;
    let directionsService, directionsRenderer;
    let startLocation = null;
    let startZone = null;
    let currentMarker = null; // single, replaceable marker

    // Branch coordinates
    const branchLocations = [
      {lat: -36.7512, lng: 174.7062, title: "200 Bush Road, Albany"},
      {lat: -37.7375, lng: 175.2207, title: "62/68 The Boulevard, Hamilton"},
      {lat: -37.6645, lng: 176.2069, title: "141 Newton Street, Mt Maunganui"},
      {lat: -40.3410, lng: 175.5956, title: "17 Bennett Street, Palmerston North"},
      {lat: -41.2494, lng: 174.9099, title: "65 Seaview Road, Lower Hutt"},
      {lat: -41.3020, lng: 173.2230, title: "4 Tokomaru Place, Nelson"},
      {lat: -43.5333, lng: 172.5500, title: "15 Foremans Road, Christchurch"},
      {lat: -45.8742, lng: 170.5036, title: "32 McNab Street, Dunedin"}
    ];

    // Consultant coordinates
    const consultantLocations = [
      {lat: -36.7193, lng: 174.7367, title: "Consultant - Browns Bay"},
      {lat: -36.6850, lng: 174.7410, title: "Consultant - Long Bay"},
      {lat: -37.6500, lng: 175.5167, title: "Consultant - Morrinsville"},
      {lat: -37.6973, lng: 176.2846, title: "Consultant - Papamoa Beach"},
      {lat: -40.9167, lng: 175.0167, title: "Consultant - Paraparaumu"},
      {lat: -43.5833, lng: 172.3833, title: "Consultant - Rolleston"}
    ];

    function initMap() {
      map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: -40.9, lng: 174.9 }, // NZ center
        zoom: 5
      });

      directionsService = new google.maps.DirectionsService();
      directionsRenderer = new google.maps.DirectionsRenderer({ map: map });

      const inputOrigin = document.getElementById("address");
      autocompleteOrigin = new google.maps.places.Autocomplete(inputOrigin, {
        componentRestrictions: { country: "nz" }
      });

      const inputDest = document.getElementById("to");
      autocompleteDest = new google.maps.places.Autocomplete(inputDest, {
        componentRestrictions: { country: "nz" }
      });

      autocompleteOrigin.addListener("place_changed", () => {
        const place = autocompleteOrigin.getPlace();
        if (!place.geometry) return;
        startLocation = place.geometry.location;
        placeMarker(startLocation);
        map.setCenter(startLocation);
        map.setZoom(12);
        checkZone(startLocation, true);
      });

      inputOrigin.addEventListener("keydown", (e) => {
        if (e.key === "Enter") {
          e.preventDefault();
          lookupZone();
        }
      });

      inputDest.addEventListener("keydown", (e) => {
        if (e.key === "Enter") {
          e.preventDefault();
          calcRoute();
        }
      });

      // Load zones
      fetch("zones.geojson", { cache: "no-cache" })
        .then(res => res.json())
        .then(data => {
          data.features.forEach(feature => {
            const coords = getCoords(feature.geometry);
            const name = feature.properties.name || "Unnamed";
            const polygon = new google.maps.Polygon({
              paths: coords,
              strokeColor: "#FF6666",
              strokeOpacity: 0.6,
              strokeWeight: 2,
              fillColor: "#FF6666",
              fillOpacity: 0.05, // softer overlay
              map: map
            });
            polygons.push({ polygon, name });
          });
        })
        .catch(err => console.error("Error loading GeoJSON:", err));

      // Mark branches with a building icon (SVG path)
      const buildingIcon = {
        path: "M2,22 L2,10 L10,6 L18,10 L18,22 L2,22 Z M5,22 L5,14 L8,14 L8,22 Z M12,22 L12,14 L15,14 L15,22 Z M2,10 L10,6 L18,10",
        fillColor: "#e10600",
        fillOpacity: 0.95,
        strokeColor: "#800000",
        strokeWeight: 1.5,
        scale: 1.6,
        anchor: new google.maps.Point(10, 22)
      };

      branchLocations.forEach(branch => {
        new google.maps.Marker({
          position: { lat: branch.lat, lng: branch.lng },
          map: map,
          icon: buildingIcon,
          title: branch.title
        });
      });

      // Mark consultants with person emoji labels and white background
      const consultantIcon = {
        path: google.maps.SymbolPath.CIRCLE,
        fillColor: "#FFFFFF",
        fillOpacity: 0.9,
        strokeColor: "#333333",
        strokeWeight: 1,
        scale: 15 // Size of the white circle background
      };

      consultantLocations.forEach(c => {
        new google.maps.Marker({
          position: { lat: c.lat, lng: c.lng },
          map: map,
          icon: consultantIcon,
          label: {
            text: "ðŸ‘¤",
            fontSize: "14px",
            color: "#000000"
          },
          title: c.title
        });
      });
    }

    function placeMarker(location) {
      if (currentMarker) currentMarker.setMap(null);
      currentMarker = new google.maps.Marker({ position: location, map: map });
    }

    function getCoords(geometry) {
      if (geometry.type === "Polygon") {
        return geometry.coordinates[0].map(c => ({ lat: c[1], lng: c[0] }));
      } else if (geometry.type === "MultiPolygon") {
        return geometry.coordinates.flat(2).map(c => ({ lat: c[1], lng: c[0] }));
      }
      return [];
    }

    function lookupZone() {
      const place = autocompleteOrigin.getPlace();
      const geocoder = new google.maps.Geocoder();

      if (place && place.geometry) {
        startLocation = place.geometry.location;
        placeMarker(startLocation);
        map.setCenter(startLocation);
        map.setZoom(12);
        checkZone(startLocation, true);
      } else {
        const address = document.getElementById("address").value;
        geocoder.geocode({ address, componentRestrictions: { country: "NZ" } },
          (results, status) => {
            if (status === "OK" && results[0]) {
              startLocation = results[0].geometry.location;
              placeMarker(startLocation);
              map.setCenter(startLocation);
              map.setZoom(12);
              checkZone(startLocation, true);
            } else {
              document.getElementById("result").textContent =
                "Geocode failed: " + status;
            }
          });
      }
    }

    // If updateStart is true, also set startZone
    function checkZone(location, updateStart = false) {
      let found = null;
      polygons.forEach(p => {
        if (google.maps.geometry.poly.containsLocation(location, p.polygon)) {
          found = p.name;
        }
      });

      if (updateStart) startZone = found || null;

      if (found) {
        const repeated = Array(6)
          .fill(`This address is inside ${found}`)
          .map(msg => `<span>${msg}</span>`)
          .join("");
        document.getElementById("result").innerHTML = repeated;
      } else {
        document.getElementById("result").textContent =
          "This address is outside all zones";
      }
    }

    function calcRoute() {
      if (!startLocation) {
        document.getElementById("result").textContent =
          "Please look up a starting address first.";
        return;
      }

      const place = autocompleteDest.getPlace();
      const geocoder = new google.maps.Geocoder();

      if (place && place.geometry) {
        handleRoute(place.geometry.location);
      } else {
        const to = document.getElementById("to").value;
        geocoder.geocode({ address: to, componentRestrictions: { country: "NZ" } },
          (results, status) => {
            if (status === "OK" && results[0]) {
              handleRoute(results[0].geometry.location);
            } else {
              document.getElementById("result").textContent =
                "Destination geocode failed: " + status;
            }
          });
      }
    }

    function handleRoute(destLocation) {
      // Determine destination zone
      let destZone = null;
      polygons.forEach(p => {
        if (google.maps.geometry.poly.containsLocation(destLocation, p.polygon)) {
          destZone = p.name;
        }
      });

      const request = {
        origin: startLocation,
        destination: destLocation,
        travelMode: google.maps.TravelMode.DRIVING
      };

      directionsService.route(request, (result, status) => {
        if (status === "OK") {
          directionsRenderer.setDirections(result);
          const leg = result.routes[0].legs[0];

          let zoneInfo = "";
          if (startZone && destZone) {
            zoneInfo = ` | Zones: <span style="color:red; font-weight:bold;">${startZone}</span> <span style="font-weight:bold; text-decoration:underline;">to</span> <span style="color:red; font-weight:bold;">${destZone}</span>`;
          } else if (startZone && !destZone) {
            zoneInfo = ` | Zones: <span style="color:red; font-weight:bold;">${startZone}</span> <span style="font-weight:bold; text-decoration:underline;">to</span> Outside zones`;
          } else if (!startZone && destZone) {
            zoneInfo = ` | Zones: Outside zones <span style="font-weight:bold; text-decoration:underline;">to</span> <span style="color:red; font-weight:bold;">${destZone}</span>`;
          }

          document.getElementById("result").innerHTML =
            `Distance: ${leg.distance.text} | Duration: ${leg.duration.text}${zoneInfo}`;
        } else {
          document.getElementById("result").textContent =
            "Route request failed: " + status;
        }
      });
    }
  </script>
</body>
</html>
